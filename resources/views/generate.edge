<!doctype html>
<html class="no-js" lang="en">

<head>
  <meta charset="utf-8">
  <title>Signature Maker 5000</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link rel="manifest" href="site.webmanifest">
  <link rel="apple-touch-icon" href="{{ assetsUrl( 'icon.png' ) }}">
  <!-- Place favicon.ico in the root directory -->

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

  {{ style( 'css/normalize.css' ) }}
  {{ style( 'fonts/stylesheet.css' ) }}
  {{ style( 'css/main.css' ) }}

  <meta name="theme-color" content="#fafafa">
  <style>
    .info {
      background: pink;
      padding: 20px;
      border-radius: 3px;
      font-weight: 700 !important;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="py-5 text-center">
      <h2>Here is Your Fresh Signature!</h2>
      <p class="lead">Go to Gmail > Settings and paste in your signature.</p>
      <p class="info">You need to use Firefox for this step as Chrome adds extra&nbsp;formatting.</p>
    </div>

    <div class="row">
      <div class="col-md-2 order-md-1 mb-4"></div>
      <div class="col-md-8 order-md-2">
        <button class="btn btn-primary btn-lg btn-block" type="submit" onclick="copy();">Copy</button>

        <hr class="mb-4">

        <div class="container mb-4">
            <iframe srcdoc="{{ signature }}" id="signature" height="350px" valign="top" width="100%" frameborder="0"></iframe>
        </div>

        <textarea type="text" class="form-control" value="" style="height: 300px;">
            {{ signature }}
        </textarea>
      </div>
    </div>

    <script>
        function copy() {
            var iframe = document.getElementById('signature')
            iframe.contentDocument.designMode = "on";
            iframe.contentDocument.execCommand("selectAll", false, null);
            iframe.contentDocument.execCommand("copy", false, null);
            iframe.contentDocument.designMode = "off";
        }
    </script>
  </div>

  {{ script( 'js/vendor/modernizr-3.8.0.min.js' ) }}

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

  {{ script( 'js/plugins.js' ) }}
  {{ script( 'js/main.js' ) }}
</body>

</html>
